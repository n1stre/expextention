{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@helpers": ["app/src/helpers/index.js"],
      "@helpers/*": ["app/src/helpers/*"],
      "@utils": ["app/src/utils/index.js"],
      "@utils/*": ["app/src/utils/*"]
    }
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
