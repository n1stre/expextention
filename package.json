{
  "name": "expextention",
  "version": "1.0.0",
  "description": "Extention for creating components (Vanilla, React, Vue) from the elements on the pages you visit",
  "main": "index.js",
  "scripts": {
    "test": "standard",
    "build": "yarn build_app_script -p && yarn build_background_script -p && yarn clone_chrome_manifest",
    "build_app_script": "webpack --config ./config/webpack.app.js",
    "build_bg_script": "webpack --config ./config/webpack.background.js",
    "watch": "concurrently -r \"yarn watch_bg_script\" \"yarn watch_app_script\" \"yarn auto_reload_extention\"",
    "watch_app_script": "yarn build_app_script -p -w",
    "watch_bg_script": "yarn build_bg_script -p -w",
    "clone_chrome_manifest": "cp manifest.json app/dist",
    "auto_reload_extention": "onchange \"app/dist/**/*\" -- yarn reload_extention",
    "reload_extention": "/usr/bin/open -a \"/Applications/Google Chrome.app\" 'http://reload.extensions'"
  },
  "author": "Nikita Strelets",
  "license": "MIT",
  "dependencies": {
    "ramda": "^0.25.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "node-sass": "^4.9.0",
    "onchange": "^4.0.0",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "standard": "^11.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.1.0",
    "webpack-cli": "^3.0.8",
    "webpack-merge": "^4.1.3"
  }
}
